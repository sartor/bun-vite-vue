{
    "name": "bunvite",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"./node_modules/.bin/bun --watch run back/server.ts\" \"vite build --watch\"",
        "build": "NODE_ENV=production vite build && NODE_ENV=production ./node_modules/.bin/bun build --compile --minify --outfile dist/bunvite-app back/server.ts",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "vue": "^3.5.18"
    },
    "devDependencies": {
        "@types/bun": "^1.2.20",
        "bun": "^1.2.20",
        "concurrently": "^9.2.0",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vue/tsconfig": "^0.7.0",
        "typescript": "~5.8.3",
        "vite": "^7.1.2",
        "vue-tsc": "^3.0.5"
    }
}
